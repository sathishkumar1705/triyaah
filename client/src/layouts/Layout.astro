---
import Logo from "../assets/Logo.jpg";
import "./style.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="grid-container">
        <div class="grid-item-logo">
          <img src={Logo} alt="Triyaah Logo" />
        </div>
        <div class="grid-item-search">
          <input type="search" placeholder="Search for..." />
        </div>
        <div class="grid-item-icons">
          <div class="icon-bar">
            <a href="#"><i class="fa fa-heart-o"></i></a>
            <a href="#"><i class="fa fa-shopping-bag"></i></a>
            <a href="#"><i class="fa fa-user-o"></i></a>
          </div>
        </div>
      </div>
	  <div class="navbar">
		<a href="#home">New Arrivals</a>
		<div class="dropdown">
		  <button class="dropbtn">Collections
			<i class="fa fa-caret-down"></i>
		  </button>
		  <div class="dropdown-content">
			<a href="#">Collections 1</a>
			<a href="#">Collections 2</a>
			<a href="#">Collections 3</a>
		  </div>
		</div>
		<div class="dropdown">
			<button class="dropbtn">Saree Galore
			  <i class="fa fa-caret-down"></i>
			</button>
			<div class="dropdown-content">
			  <a href="#">Saree Galore 1</a>
			  <a href="#">Saree Galore 2</a>
			  <a href="#">Saree Galore 3</a>
			</div>
		  </div>
		  <div class="dropdown">
			<button class="dropbtn">Categories
			  <i class="fa fa-caret-down"></i>
			</button>
			<div class="dropdown-content">
			  <a href="#">Categories 1</a>
			  <a href="#">Categories 2</a>
			  <a href="#">Categories 3</a>
			</div>
		  </div>
		  <div class="dropdown">
			<button class="dropbtn">Occasion
			  <i class="fa fa-caret-down"></i>
			</button>
			<div class="dropdown-content">
			  <a href="#">Occasion 1</a>
			  <a href="#">Occasion 2</a>
			  <a href="#">Occasion 3</a>
			</div>
		  </div>
		<a href="#home">Blog</a>
	  </div>
    </header>
	<slot />
  </body>
</html>
<style is:global></style>
